<config xmlns="http://tail-f.com/ns/config/1.0">
  <access-list xmlns="http://example.com/acl-service">
    <name>test-acl-01</name>
    <device>ios-1</device>
    <rule>
      <name>host-to-host</name>
      <description>Allow inbound smtp access</description>
      <action>permit</action>
      <protocol>tcp</protocol>
      <source>
        <address>192.168.1.1</address>
      </source>
      <destination>
        <address>192.168.10.11</address>
        <port>25</port>
      </destination>
      <log/>
    </rule>
    <rule>
      <name>host-to-net</name>
      <description>Allow inbound mgmt access</description>
      <action>permit</action>
      <protocol>tcp</protocol>
      <source>
        <address>192.168.1.5</address>
      </source>
      <destination>
        <address>192.168.11.0/24</address>
        <port>22</port>
      </destination>
      <log/>
    </rule>
    <rule>
      <name>net-to-host</name>
      <description>Allow inbound ftp access</description>
      <action>permit</action>
      <protocol>tcp</protocol>
      <source>
        <address>192.168.0.0/16</address>
      </source>
      <destination>
        <address>192.168.10.16</address>
        <port>21</port>
      </destination>
      <log/>
    </rule>
    <rule>
      <name>any-to-host</name>
      <description>Allow inbound dns access</description>
      <action>permit</action>
      <protocol>udp</protocol>
      <source>
        <address>0.0.0.0/0</address>
      </source>
      <destination>
        <address>192.168.10.20</address>
        <port>53</port>
      </destination>
      <log/>
    </rule>
    <rule>
      <name>host-to-any</name>
      <description>Allow inbound dns-tcp access</description>
      <action>permit</action>
      <protocol>tcp</protocol>
      <source>
        <address>192.168.15.5</address>
      </source>
      <destination>
        <address>0.0.0.0/0</address>
        <port>53</port>
      </destination>
      <log/>
    </rule>
    <rule>
      <name>any-to-any</name>
      <description>Allow inbound https access</description>
      <action>permit</action>
      <protocol>tcp</protocol>
      <source>
        <address>0.0.0.0/0</address>
      </source>
      <destination>
        <address>0.0.0.0/0</address>
        <port>443</port>
      </destination>
      <log/>
    </rule>
    <rule>
      <name>src-port</name>
      <description>Allow inbound app access</description>
      <action>permit</action>
      <protocol>tcp</protocol>
      <source>
        <address>192.168.5.0/26</address>
        <port>333</port>
      </source>
      <destination>
        <address>192.168.17.16</address>
        <port>333</port>
      </destination>
      <log/>
    </rule>
    <rule>
      <name>no-log</name>
      <description>Allow telnet access - no log</description>
      <action>permit</action>
      <protocol>tcp</protocol>
      <source>
        <address>192.168.5.0/26</address>
      </source>
      <destination>
        <address>192.168.17.16</address>
        <port>23</port>
      </destination>
    </rule>
  </access-list>
</config>
